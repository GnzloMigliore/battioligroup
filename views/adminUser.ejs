<!DOCTYPE html>

<html lang="en">
<!-- head -->
<%- include('partials/head.ejs') %>
<!-- end head -->
<!-- body start-->

<body>
	<!-- preloader -->
	<div class="preloader">
		<div class="spinner">
			<div class="double-bounce1"></div>
			<div class="double-bounce2"></div>
		</div>
	</div>
	<!-- end preloader -->
	<%- include('partials/navbar.ejs') %>

	<!-- Breadcroumb Area -->

	<div class="breadcroumb-area bread-bg">
		<div class="container">
			<div class="row">
				<div class="col-lg-12">
					<div class="breadcroumb-title text-center">
						<h1>Administrar Usuarios</h1>
						<h6><a href="index.html">Home</a> / Administar</h6>
					</div>
				</div>
			</div>
		</div>
	</div>
	<div class="conteiner">
      <div class="row"> 
		<div class="d-flex justify-content-start col-6">
			<form method="POST" id="busqueda" action="/searchUser" class="form-inline ocultar">
				
			   <input class="form-control" type="search" name="search" placeholder="Buscar...">
				 <button class="btn" type="submit">
				 <ion-icon name="search-outline"></ion-icon>
			  </button>
			</form> 
		</div>
			<div class="d-flex justify-content-end col-6">
				<a href="/allproducts" class=" btn btn-primary ">Ver todos los productos</a>
	
			  </div>
			   

      </div> 
	</div>
	
	<article class="col-12">
		<table class="table">
			<thead>
				<tr>
					
					<th scope="col">Nombre</th>
					<th scope="col">Apellido</th>
					<th scope="col">Teléfono</th>
					<th scope="col">Email</th>
					<th scope="col">Dirección</th>
					<th scope="col">DNI</th>
					<th scope="col">Género</th>
					<th scope="col">Ver</th>
					<th scope="col">Editar</th>
					<th scope="col">Eliminar</th>
									   
				</tr>
			</thead>
			<tbody>
				<% usuarios.forEach(user=> { %>
					<tr>
					   
						<td><%= user.first_name %></td>
						<td><%= user.last_name %></td>
						<td><%= user.telephone %></td>
						<td><%= user.email %></td>
						<td><%= user.adress %></td>
						<td><%= user.dni %></td>
						<td><%= user.gender %></td>
						<td><a href="/adminProducts/<%= user.id %>"><ion-icon name="eye-outline"></ion-icon></a></td>
						<td><a href="/editUser/<%= user.id %>"><ion-icon name="pencil-outline"></ion-icon></a></td>
						<td><a href="/deleteUser/<%= user.id %>"><ion-icon name="close-outline"></ion-icon></a></td>
					</tr>
					<% }); %> 
			</tbody>
		</table>
		<a href="/" class=" btn btn-primary border mb-3">Volver</a>
		
	</article>
	


	<!-- Scroll Top Area -->
	<a href="#top" class="go-top" style="display: block;"><i class="las la-angle-up"></i></a>

	<!-- Jquery Library -->
	<script src="js/jquery-2.min.js"></script>
	<!-- Bootstrap Js -->
	<script src="js/bootstrap.bundle.js"></script>
	<!-- Owl Carousel js -->
	<script src="js/owl.carousel.min.js"></script>
	<!-- Smooth Scroll Js -->
	<script src="js/smooth-scroll.js"></script>
	<!-- Navigation JS -->
	<script src="js/menumaker.js"></script>
	<!-- Way Points JS -->
	<script src="js/waypoints.min.js"></script>
	<!-- Counter Up JS -->
	<script src="js/jquery.counterup.js"></script>
	<!-- Sticky JS -->
	<script src="js/jquery.sticky.js"></script>
	<!-- Slicknav JS -->
	<script src="js/jquery.slicknav.min.js"></script>
	<!-- Mail Chimp JS -->
	<script src="vendor/mailchimp/jquery.ajaxchimp.js"></script>
	<!-- Main JS -->
	<script src="js/theme.js"></script>
	<!-- end JS -->
	<!-- Ionicons -->
	<script  src = "https://unpkg.com/ionicons@5.1.2/dist/ionicons.js" ></script>
</body>
<!-- body end -->

</html>
